WindowManager:
    MainWindow:
    Input:
    Search:
    EditDelete:




<MainWindow>
    name:"main"
    
    FloatLayout:
        canvas.before:                
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'neo.jpg'
        Button:
            text:"Input Issue"
            font_name: "pricedown"
            font_size:30
            background_color: 1.55, 1.88, 2.48, 1
            on_release:app.root.current = "input"
            size_hint:(.5, .2)
            pos_hint: {'center_x': .5, 'center_y': .8}
            
        Button:
            background_color: 2.03, 0.28, 2.30 , 1
            text:"Search Issues"
            on_release:app.root.current = "search"   
            size_hint:(.5, .2)
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_size:30
            font_name: "pricedown"
        Button:
            background_color: 1.07, 0.25 , 1.45, 1
            text:"Edit/Delete issues"
            on_release:app.root.current = "editdel"   
            size_hint:(.5, .2)
            pos_hint: {'center_x': .5, 'center_y': .2}
            font_size:30
            font_name: "pricedown"

<Input>:
    name:"input"
    problem:problem
    solution:solution
    
    FloatLayout: 
        canvas.before:                
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'neo.jpg'
        Label:
            text:"Please input problem"
            font_name: "pricedown"
            font_size: 25
            halign:"center"
            valign:"middle"
            size_hint:(.3, .4)
            pos_hint: {'center_x': .2, 'center_y': .8}

        TextInput:
            id:problem
            hint_text:"Please input your problem here."   
            font_size: 15
            write_tab: False
            halign:"center"
            valign:"middle"
            size_hint:(.4, .2)
            pos_hint: {'center_x': .6, 'center_y': .8}
        Label:
            text:"Please input Solution"
            font_name: "pricedown"
            font_size: 25
            halign:"center"
            valign:"middle"
            size_hint:(.3, .4)
            pos_hint: {'center_x': .2, 'center_y': .5}

        TextInput:
            id:solution
            on_text_validate: root.btn() 
            hint_text:"Please input your solution here. Text formatting does not matter :)"
            font_size: 15
            write_tab: False
            halign:"center"
            valign:"middle"
            size_hint:(.5, .5)
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint:(.4, .3)
            pos_hint: {'center_x': .6, 'center_y': .5}

        Button:
            text:"Sumbit"
            font_name: "pricedown"
            background_color: 1.55, 1.88, 2.48, 1
            font_size: 20
            size_hint:(.3, .1)
            pos_hint: {'center_x': .3, 'center_y': .2}
            on_press:root.btn()
            halign:"center"
            valign:"middle"
        Button:
            text:"Go back"
            font_name: "pricedown"
            background_color: 1.55, 1.88, 2.48, 1
            on_press:root.clear()
            text:"Go back"
            on_release:app.root.current = "main"
            font_size: 20
            size_hint:(.3, .1)
            pos_hint: {'center_x': .7, 'center_y': .2}
<Search>
    
    name:"search"
	problemsrc:problemsrc
    
    FloatLayout:
        canvas.before:                
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'neo.jpg'
        Label:
            font_name: "pricedown"
            font_size: 20
            text: "Search for issues here. ->> \nExample: NOT_ACCEPTABLE.\n For maximum accuracy use % after your issue name"
            multiline:True
            text_size: self.width, None
            size_hint:(.3, .2)
            pos_hint: {'center_x': .2, 'center_y': .8}

        TextInput:
		    hint_text: "Your Issue"
            font_size: 15
		    multiline: False
            write_enter: False
            write_tab: False
            on_text_validate:
                root.btnsrc()
		    id:problemsrc
            size_hint:(.4, .2)
            pos_hint: {'center_x': .6, 'center_y': .8}

        Label:
            font_name: "pricedown"
            id:result
            font_size:20
            text: root.result
            multiline: True
            halign:"center"
            valign:"middle"
            size_hint:(.3, .4)
            pos_hint: {'center_x': .2, 'center_y': .5}
        
        TextInput:
            text: root.solution
            multiline: True
            write_tab: False
            halign:"center"
            valign:"middle"
            size_hint:(.4, .3)
            pos_hint: {'center_x': .6, 'center_y': .5}



        Button:
            font_name: "pricedown"
		    text: "Seach"
            id: btnsearch
            focus: False
            background_color: 1.55, 1.88, 2.48, 1
		    on_press:root.btnsrc()
            font_size: 20
            size_hint:(.3, .1)
            pos_hint: {'center_x': .3, 'center_y': .2}
            
             
        Button:
            font_name: "pricedown"
            text:"Go back"
            on_press:root.clear()
            background_color: 1.55, 1.88, 2.48, 1
            on_release:app.root.current = "main"
            font_size: 20
            size_hint:(.3, .1)
            pos_hint: {'center_x': .7, 'center_y': .2}
            
            
            
<EditDelete>
    name:"editdel"
    updatesol:updatesol
    problemsrc:problemsrc
    GridLayout:
        cols:2
        size: root.width, root.height
        orientation:"vertical"
        BoxLayout:  
            orientation:"vertical"  
        
            TextInput:
		        hint_text: "Search for the issue you want to update or delete here"
                on_text_validate: root.btnsrc()
                font_size: 15
                write_tab: False
		        multiline: False
		        id:problemsrc
                size_hint:(.5, .5)
                pos_hint: {'center_x': .5, 'center_y': .5}

            Label:
                id:result
                font_name: "pricedown"
                font_size:20
                text: root.result
                multiline: True
                halign:"center"
                valign:"middle"
                size_hint:(.5, .5)
                pos_hint: {'center_x': .5, 'center_y': .5}
            Label:
                text: root.solution
                font_size:20
                font_name: "pricedown"
                multiline: True
                halign:"center"
                valign:"middle"
                size_hint:(.5, .5)
                pos_hint: {'center_x': .5, 'center_y': .5}    
            BoxLayout:  
                orientation:"vertical"
    
        
                TextInput:
                    id:updatesol
                    write_tab: False
                    hint_text:"Enter your updated solution here and press edit when you're ready"

                BoxLayout:
                    orientation:"horizontal"
                    Button:
		                text: "Seach"
		                on_press:root.btnsrc()
                        font_name: "pricedown"
                        font_size: 20
                        background_color: 1.14, 2.45, 0 , 1
                        size_hint:(.2, .2)
                        pos_hint: {'center_x': .5, 'center_y': .5}
                    Button:
		                text: "edit"
		                on_press:root.btnupdate()
                        font_name: "pricedown"
                        font_size: 20
                        size_hint:(.2, .2)
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        background_color: 2.55, 2.32, 0 , 1
            
             
                    Button:
                        text:"Go back"
                        background_color: 1.55, 1.88, 2.48, 1
                        font_name: "pricedown"
                        on_press:root.clear()
                        on_release:app.root.current = "main"
                        font_size: 20
                        size_hint:(.2, .2)
                        pos_hint: {'center_x': .5, 'center_y': .5}
                   
                    Button:
                        text:"Delete"
                        on_release:root.btndelete()
                        font_name: "pricedown"
                        font_size: 20
                        size_hint:(.2, .2)
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        background_color: 1.92, 0 , 0, 1

